# Python path configuration
PYTHONPATH=.

# Azure AI Foundry Configuration
# Format: https://<resource-name>.services.ai.azure.com/api/projects/<project-name>
AI_FOUNDRY_PROJECT_ENDPOINT=

# Format: https://<resource-name>.openai.azure.com/
AI_FOUNDRY_OPENAI_ENDPOINT=

# Format: https://<resource-name>.cognitiveservices.azure.com/
AI_FOUNDRY_COGNITIVE_SERVICES_ENDPOINT=

# Your Azure AI Foundry API key from the Azure portal
AI_FOUNDRY_API_KEY=

# Azure AI API Configuration
# The API version to use for Azure OpenAI calls
AZURE_AI_API_VERSION=2025-04-01-preview

# Model Deployment Names
# Name of your GPT-4 deployment in Azure OpenAI
GPT_MODEL_DEPLOYMENT_NAME=

# Name of your text embedding model deployment (e.g., text-embedding-ada-002, text-embedding-3-small)
EMBEDDING_DEPLOYMENT_NAME=

# Name of your GPT-4o deployment in Azure OpenAI
GPT_4o_MODEL_DEPLOYMENT_NAME=

# Name of your O-series model deployment (e.g., o3-mini)
O_MODEL_DEPLOYMENT_NAME=

# Tracing Configuration
# Enable content recording for AI tracing (true/false)
AZURE_TRACING_GEN_AI_CONTENT_RECORDING_ENABLED=true

# Capture message content in OpenTelemetry instrumentation (true/false)
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true

# Azure AI Search Configuration
# Format: https://<search-service-name>.search.windows.net
AI_SEARCH_SERVICE_ENDPOINT=

# Admin API key for Azure AI Search service
AI_SEARCH_API_KEY=

# Name of the search index to use
AI_SEARCH_INDEX_NAME=

# PostgreSQL Database Configuration
# Hostname of your Azure Database for PostgreSQL server
PG_HOST=

# Database name to connect to
PG_DATABASE=

# PostgreSQL username
PG_USERNAME=

# PostgreSQL password
PG_PASSWORD=
